/* pages/signUp/signUp.wxss */
.background{
  background-color: #EDEEF2;
  width: 100%;
  height:1000px;
}

.card-background{
  background-color: white;
  width: 80%;
  position: fixed;
  top: 15%;
  bottom: 15%;
  left: 10%;
  right: 10%;
  border-radius: 30rpx; 
  box-shadow:  0 0 15px rgb(180, 181, 185);
}

.class-information{
  height: 25%;
  width: 100%;
  display: flex;
  flex-direction: column; 
}

.sign-password{
  height: 50%;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-top: 70rpx;
}

.signup-btn{
  width: 100%;
  display: flex;
}

.class-name{
  font-size: 35rpx;
  margin-left: 50rpx;
  font-weight: bold;
}

.teacher-name{
  font-size: 35rpx;
  margin-left: 50rpx;
  margin-top: 16rpx;
}

.class-time{
  font-size: 35rpx;
  margin-left: 50rpx;
  margin-top: 16rpx;
}


.iptbox{
  width: 80rpx;
  height: 80rpx;
  border:1rpx solid #ccc;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin-right: 10rpx;
  margin-left: 10rpx; 
}

.password-box{
  display: flex;
  margin-left: auto;
  margin-right: auto; 
  margin-top: 120rpx; 
}

.ipt{
  width: 0;
  height: 0;
}
.title-line{
  border-bottom: 1px solid #ddd;
  width: 500rpx;
  height: 32rpx;
  margin: 0 auto;
}
.form-title{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin: 0 auto;
  background: #fff;
  width: 200rpx;
}

.btn-submit {
  width: 450rpx;
  height: 80rpx;
  background-color: #25c6fc;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}