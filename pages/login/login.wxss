/* pages/login/login.wxss */

.userinfo-box {
  position: absolute;
  width: 100%;
  height: 40%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.userinfo-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 100rpx;
  border: 1px solid #999;
  box-shadow: 1px 1px 10px #888;
}

.userinfo-loginbtn {
  position: fixed;
  width: 100%;
  height: 60%;
  bottom: 0;
}

.loginbtn {
  width: 450rpx;
  background-color: #25c6fc;
  color: #fff;
  margin-top: 100rpx;
}

.loginbtn::after {
  border: none;
}

.password-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 60rpx; 
  height: 200rpx;
}

.password-text {
  width: 450rpx;
  border: 1px solid #999;
  box-shadow: 1px 1px 5px #888;
  border-radius: 10px;
  padding-left: 15rpx;
  padding-right: 15rpx;
  height: 60rpx;
  margin-bottom: 25rpx;
}
.title-line{
  border-bottom: 1px solid #ddd;
  width: 600rpx;
  height: 32rpx;
  margin: 0 auto;
}
.form-title{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin: 0 auto;
  background: #fff;
  width: 200rpx;
}

.end-btn{
  position: fixed;
  width: 60%;
  margin-bottom: 100rpx;
  margin-right: 20%;
  margin-left: 20%; 
  text-align: center;
  bottom: 0;
  border-bottom: 1px solid #ddd;
}
