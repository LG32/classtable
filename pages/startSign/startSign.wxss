/* pages/startSign/startSign.wxss */

.background {
  background-color: #edeef2;
  width: 100%;
  height: 1000px;
}

.card-background {
  background-color: white;
  width: 80%;
  position: fixed;
  top: 15%;
  bottom: 15%;
  left: 10%;
  right: 10%;
  border-radius: 30rpx;
  box-shadow: 0 0 15px rgb(180, 181, 185);
}

.class-information {
  height: 25%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.sign-password {
  height: 40%;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-top: 70rpx;
}

.signup-btn {
  width: 100%;
  display: flex;
  margin-top: 50rpx; 
}

.class-name {
  font-size: 35rpx;
  margin-left: 50rpx;
  font-weight: bold;
}

.teacher-name {
  font-size: 35rpx;
  margin-left: 50rpx;
  margin-top: 16rpx;
}

.class-time {
  font-size: 35rpx;
  margin-left: 50rpx;
  margin-top: 16rpx;
}

.iptbox {
  width: 80rpx;
  height: 80rpx;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  margin-right: 10rpx;
  margin-left: 10rpx;
}

.password-box {
  display: flex;
  margin-left: auto;
  margin-right: auto;
  margin-top: 50rpx;
}

.ipt {
  width: 0;
  height: 0;
}

.title-line {
  border-bottom: 1px solid #ddd;
  width: 500rpx;
  height: 32rpx;
  margin: 0 auto;
}

.form-title {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin: 0 auto;
  background: #fff;
  width: 200rpx;
}

.btn-submit {
  width: 450rpx;
  height: 80rpx;
  background-color: #25c6fc;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.second-title {
  margin-top: 48rpx;
  margin-left: 48rpx;
  font-size: 32rpx;
}

.third-title {
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 130rpx;
}

.picker {
  display: flex;
  width: 33%;
  height: 80rpx;
  flex-direction: row;
}

.picker-btn {
  background-color: #fff;
  color: #000;
  overflow: hidden;
  font-size: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #ccc;
  border-radius: 20rpx;
  margin-top: 10rpx; 
}

.picker-btn::after {
  border: none;
}

.picker-box {
  display: flex;
  margin-left: auto;
  margin-right: auto;
  flex-direction: row;
  margin-top: 35rpx;
}

.arrows-img {
  width: 25rpx;
  height: 25rpx;
  display: inline-block;
  margin-left: 10rpx;
}

.time-container{
    /* background-color: wheat; */
    width:100%;
    height:150px;
    justify-content:center;
    position: relative;
}
.bgCanvas{
    width:150px;
    height:150px;
    margin-left: 25%;
    margin-right: 25%;
    position: absolute;
    
}
.stepText{
  height: 100px;
  font-size: 20px;
  color: green;
  display: flex;
  align-items: center;
  justify-content: center;

}
.canvas-title{
  font-size: 20px;
  font-weight: bold; 
  color: black;
  display: flex;
  justify-content: center;
}
.messages-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #000;
  z-index: 5;
  left: 0;
  opacity: 0.8;
  display: flex;
  flex-direction: column;
}

.message-text {
  z-index: 6;
  color: #fff;
  font-size: 32rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}

.dialog {
  width: 80%;
  height: 80%;  
  position: fixed; 
  margin-top:10%;
  margin-left:10%;
  z-index: 1001;  
  border-radius: 3px;
  overflow-y: scroll;
  background-color: #000;
  opacity: 0.8;
}
.class-box{
  display: flex;
}